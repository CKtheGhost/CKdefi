# CompounDefi Environment Configuration
# Copy this file to .env and customize for your environment

# Server configuration
PORT=3000
NODE_ENV=development

# Aptos network configuration
# Options: MAINNET, TESTNET, DEVNET
APTOS_NETWORK=MAINNET

# AI API keys (get at least one for recommendation engine)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database configuration (optional)
# DATABASE_URL=mongodb://localhost:27017/compoundefi

# External API keys (optional but recommended)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Rate limiting settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache TTL (Time To Live) in milliseconds
CACHE_TTL_STAKING=600000
CACHE_TTL_NEWS=900000
CACHE_TTL_TOKENS=300000
CACHE_TTL_STRATEGY=3600000

# Auto-rebalancer settings
MIN_REBALANCE_THRESHOLD=5
MAX_SLIPPAGE=2.5
GAS_BUFFER=1.15
MAX_RETRIES=3
OPERATION_DELAY=500

# Debug settings
DEBUG=false
LOG_LEVEL=info